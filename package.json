{
  "name": "modal-handler",
  "version": "3.1.3",
  "description": "Add accessible modals to a web page.",
  "jsnext:main": "modal-handler.js",
  "main": "cjs/modal-handler.js",
  "export": "MODAL",
  "directories": {
    "example": "example"
  },
  "scripts": {
    "test": "wdio",
    "iife": "rollup -c rollup-iife.config.js",
    "cjs": "rollup -c rollup-cjs.config.js",
    "umd": "rollup -c rollup-umd.config.js",
    "build": "npm run iife && npm run cjs && npm run umd",
    "bundle-example": "browserify example/js/simple.js -o example/bundle/simple.js && browserify example/js/on-the-fly.js -o example/bundle/on-the-fly.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:TheC2Group/modal-handler.git"
  },
  "keywords": [
    "modal"
  ],
  "author": "The C2 Group",
  "license": "MIT",
  "copyright": "(c) The C2 Group (c2experience.com)",
  "bugs": {
    "url": "https://github.com/TheC2Group/modal-handler/issues"
  },
  "homepage": "https://github.com/TheC2Group/modal-handler",
  "dependencies": {
    "c2-event-handler": "^2.3.1",
    "jquery": "^3.0.0"
  },
  "devDependencies": {
    "browserify": "^11.2.0",
    "babel-preset-es2015-rollup": "^1.0.0",
    "rollup": "^0.21.0",
    "rollup-plugin-babel": "^2.1.0",
    "mocha": "^2.3.3",
    "webdriverio": "^3.2.4"
  }
}
